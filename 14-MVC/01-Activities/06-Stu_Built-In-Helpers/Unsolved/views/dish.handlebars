<div class="dish-card">
  <div class="dish-card-header">
    {{dish_name}}
  </div>
  <div class="card-body">
    <p>
      Description:
      {{description}}
    </p>
    <!-- TODO: Use a built-in helper to display "Contains Nuts" if a food item contains nuts.-->
    {{#if has_nuts}}
    <p class="has-nuts">
      Contains Nuts
    </p>
    {{/if}}
    {{#unless has_nits}}
    <p class="has-nuts">
      Doesnot Contain Nuts
    </p>
    {{/unless}}
  </div>
</div>